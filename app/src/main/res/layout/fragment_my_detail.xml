<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="comc.example.mohammedmorse.baking.MyDetailFragment">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#f5f5f5"
       android:id="@+id/DetailLayout"
       >
      <android.support.v7.widget.CardView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"
          android:elevation="20dp"
          app:cardCornerRadius="50dp"
          android:layout_centerHorizontal="true"
          android:innerRadius="0dp"
          android:shape="ring"
          >
          <ImageView
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:id="@+id/mySweetImage"
              />
      </android.support.v7.widget.CardView>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Ingreidiants"
           android:layout_marginTop="5dp"
           android:textColor="#fff"
           />
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:elevation="20dp"
           android:layout_centerHorizontal="true"
           android:innerRadius="0dp"
           android:shape="ring"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="10dp"
           >
           <android.support.v4.view.ViewPager
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:id="@+id/MyIngrdiants"
               >
           </android.support.v4.view.ViewPager>
       </android.support.v7.widget.CardView>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/MyCustomDots1"
           android:orientation="horizontal"
           android:gravity="center"
           ></LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Steps"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="5dp"
           android:textColor="#fff"
           />

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_centerHorizontal="true"
           android:innerRadius="0dp"
           android:shape="ring"
           android:elevation="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="10dp">
           <android.support.v4.view.ViewPager
               android:layout_width="match_parent"
               android:layout_height="500dp"
               android:id="@+id/MySteps"
               ></android.support.v4.view.ViewPager>
       </android.support.v7.widget.CardView>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/MyCustomDots2"
           android:orientation="horizontal"
           android:gravity="center"
           ></LinearLayout>
   </LinearLayout>
</ScrollView>
